#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + shift + s
        bspc window -t sticky

super + {grave,Tab}
	bspc {window,desktop} -f last

super + ctrl + apostrophe
	bspc window -p down; \
        termite

super + ctrl + Return 
        bspc window -p right; \
        termite

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	termite	

super + space
        dmenu_run -b -nb "#001E26" -i -fn "DroidSansMono-10"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
#
# application bindings
#

# Caffeine
super + ctrl + c
        caffeine -a &

super + ctrl + shift + c
        caffeine -d &
# scrotter
Print
    scrot ~/Screenshots/%Y-%m-%d-%T-screenshot.png

# Shutdowm
super + p
    systemctl poweroff

super + r
    systemctl reboot

# Chrome
super + shift + f 
    google-chrome-stable

#
# Window gap
#

super + shift + u 
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2))

super + u
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 2))

#
# Padding
#

super + shift + y
        new_size=$((`bspc config -d focused top_padding` + 2)); \
        bspc config -d focused top_padding $new_size; \
        bspc config -d focused right_padding $new_size; \
        bspc config -d focused bottom_padding $new_size; \
        bspc config -d focused left_padding $new_size;

super + ctrl + y
        new_size=$((`bspc config -d focused top_padding` - 2)); \
        bspc config -d focused top_padding $new_size; \
        bspc config -d focused right_padding $new_size; \
        bspc config -d focused bottom_padding $new_size; \
        bspc config -d focused left_padding $new_size;
